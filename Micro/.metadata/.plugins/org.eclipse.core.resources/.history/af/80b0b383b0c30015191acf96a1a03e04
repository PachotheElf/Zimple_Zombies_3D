#include "ZimpleZombies.h"

volatile byte accel[3] =	{	0,	0,	0};	//	X, Y, Z
volatile byte flex[3]	=	{	0,	0,	0};
int dataBlockSize = 3;

byte sendData(bool id){
	byte error;
	
	switch(id){
	case ID_ACCEL:
		error = AS1_SendBlock(accel, 3, &dataBlockSize);
		break;
	case ID_FLEX:
		error = AS1_SendBlock(flex, 3, &dataBlockSize);
		break;
	default:
		error = 0;
		break;
	}
	return error;
}
