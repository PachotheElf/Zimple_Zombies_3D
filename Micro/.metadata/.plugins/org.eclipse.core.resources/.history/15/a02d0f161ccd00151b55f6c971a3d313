//	Sensor ID for communications
#define ID_ACCEL	0
#define	ID_FLEX		1

//	Program states
#define STATE_SETUP				0
#define STATE_MEASURE_ACCEL		1
#define	STATE_MEASURE_FLEX		2
#define	STATE_WORK_ACCEL		3
#define	STATE_WORK_FLEX			4
#define	STATE_SEND_ACCEL		5
#define	STATE_SEND_FLEX			6
#define	STATE_IDLE				7

//	ADC	related variables
const bool	ADC_HOLD	=	FALSE;
const byte	ADC_ACCEL_X	=	0;
const byte	ADC_ACCEL_Y	=	1;
const byte	ADC_ACCEL_Z	=	2;
typedef struct ADC_BUFFER_STRUCT{
	byte	ADC_LIST[6];
	byte	ADC_LIST_START;
	byte	ADC_LIST_END;
	bool	ADC_LIST_FULL;
}ADC_BUFFER_S;

//	Function prototypes
byte sendData(bool ID);

#endif /* ZIMPLEZOMBIES_H_ */
